<?xml version='1.0' encoding='utf-8'?>
<widget id="net.tigoe.simpleserial" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SimpleSerial</name>
    <description>
        Simple serial demo for Bluetooth serial Cordova plugin.
    </description>
    <author>
       Baseret på eksempel af Don Coleman https://github.com/don/BluetoothSerial revideret af Lone Østerlund
    </author>
    <content src="index.html" />

    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="true" />
	<plugin name="cordova-plugin-bluetooth-serial" />
		
	 <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
</widget>
